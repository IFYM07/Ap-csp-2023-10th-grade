print (c)

# string format
age = '36'
txt = "my name is patrica,I am "+" "+age
print (txt)

#escape character
#to insert characters that are illegalin a string use an escape character, in this case the escape character is the \
text = "we're fabulous\"unicorns\"from amazingland."
print (text)
